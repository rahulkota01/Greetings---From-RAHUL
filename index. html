<body>
  <h1>Welcome!</h1>
  <p>Enter your name to receive something special:</p>
  <input type="text" id="nameInput" placeholder="Your Name" />
  <button onclick="greetUser()">Greet Me</button>
  <div id="greetingMessage" class="greeting"></div>

  <script>
    function greetUser() {
      const name = document.getElementById('nameInput').value;
      const message = `Hey ${name}, you're destined to do something amazing today! Keep going!`;
      document.getElementById('greetingMessage').textContent = message;
    }
  </script>
